@model EmployeeUpdateViewModel

@{
    ViewData["Title"] = "Edit employee";
}

<div class="row justify-content-center">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                Update employee
            </div>
            <div class="card-body">
                <h5 class="card-title">Enter employee details</h5>
                <form asp-controller="Employee" asp-action="Edit" method="post">
                    <input asp-for="Employee.Id" type="hidden" />
                    <div class="form-group mt-3">
                        <label for="employeeFirstName">First Name</label>
                        <input asp-for="Employee.FirstName" type="text" class="form-control" id="employeeFirstName" placeholder="Enter employee first name">
                    </div>
                    <div class="form-group mt-3">
                        <label for="employeeLastName">Last Name</label>
                        <input asp-for="Employee.LastName" type="text" class="form-control" id="employeeLastName" placeholder="Enter employee last name">
                    </div>
                    <button type="submit" class="btn btn-primary mt-3">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>
