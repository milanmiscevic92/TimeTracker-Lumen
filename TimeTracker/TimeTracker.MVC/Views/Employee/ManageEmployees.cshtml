@model EmployeeListViewModel

@{
    ViewData["Title"] = "Manage Employees";
}

<div class="row h-100">
    <div class="col-md-12 h-100">
        <div class="card h-100">
            <div class="card-header">
                Employees
            </div>
            <div class="card-body">
                <table class="table table-hover text-center">
                    <thead>
                        <tr>
                            <th scope="col" colspan="2" style="text-align: left;">Employee Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var employee in Model.Employees)
                        {
                                <tr>
                                    <td style="text-align: left;">@employee.FirstName @employee.LastName</td>
                                    <td style="text-align: right;">
                                        <div class="d-flex flex-row justify-content-end">
                                            <a asp-controller="Employee" asp-action="Details" asp-route-id="@employee.Id" class="m-2 mt-0 mb-0 btn btn-info btn-sm text-white">
                                                Details
                                            </a>
                                            <a asp-controller="Employee" asp-action="Edit" asp-route-id="@employee.Id" class="m-2 mt-0 mb-0 btn btn-primary btn-sm text-white">
                                                Edit
                                            </a>
                                            <form asp-controller="Employee" asp-action="Delete" asp-route-id="@employee.Id">
                                                <input type="submit" value="Delete" class="m-2 mt-0 mb-0 btn btn-danger btn-sm text-white" />
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="card-footer d-flex justify-content-end">
                <a class="btn btn-primary btn-sm" asp-controller="Employee" asp-action="Create">Create employee</a>
            </div>
        </div>
    </div>
</div>
