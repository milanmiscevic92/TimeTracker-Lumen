@model JobListViewModel

@{
    ViewData["Title"] = "Manage Jobs";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                Jobs
            </div>
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Title</th>
                            <th scope="col">Description</th>
                            <th scope="col">No. of employees</th>
                            <th scope="col">Hourly rate</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var job in Model.Jobs)
                        {
                            <tr>
                                <td>@job.Title</td>
                                <td class="text-truncate" style="max-width: 500px;">@job.Description</td>
                                <td>@job.Employees.Count()</td>
                                <td>@job.HourlyRate $</td>
                                <td>
                                    <div class="d-flex flex-row justify-content-end">
                                        <a asp-controller="Job" asp-action="Details" asp-route-id="@job.Id" class="m-2 mt-0 mb-0 btn btn-info btn-sm text-white">
                                            Details
                                        </a>
                                        <a asp-controller="Job" asp-action="Edit" asp-route-id="@job.Id" class="m-2 mt-0 mb-0 btn btn-primary btn-sm text-white">
                                            Edit
                                        </a>
                                        <form asp-controller="Job" asp-action="Delete" asp-route-id="@job.Id">
                                            <input type="submit" value="Delete" class="m-2 mt-0 mb-0 btn btn-danger btn-sm text-white" />
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="card-footer d-flex justify-content-end">
                <a class="btn btn-primary btn-sm" asp-controller="Job" asp-action="Create">Create job</a>
            </div>
        </div>
    </div>
</div>
